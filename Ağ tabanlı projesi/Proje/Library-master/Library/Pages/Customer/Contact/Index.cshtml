@page
@model Library.Pages.Customer.Contact.IndexModel
@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <!-- Map Column -->
    <div class="col-lg-8 mb-4">
        <!-- Embedded Google Map -->
        <iframe src="https://www.google.com/maps/d/embed?mid=1g3aXp_rzZnyA0UnkkhSCP5fz5QA" width="700" height="700"></iframe>
    </div>
    <!-- Contact Details Column -->
    <div class="col-lg-4 mb-4">
        <h3>@SharedLocalizer["Contact"] @SharedLocalizer["Details"]</h3>
        <p>
            @SharedLocalizer["Library"] A.Ş.
            <br>Esentepe Kampüsü, 54030
            <br>
        </p>
        <p>
            <abbr title="Phone">P</abbr>: (531) 922 09 01
        </p>
        <p>
            <abbr title="Email">E</abbr>:
            <a href="mailto:info@Library.com">
                name@example.com
            </a>
        </p>
        <p>
            <abbr title="Hours">H</abbr>: Monday - Friday: 9:00 AM to 5:00 PM
        </p>
    </div>
</div>
<!-- /.row -->
<!-- Contact Form -->
<!-- In order to set the email address and subject line for the contact form go to the bin/contact_me.php file. -->
<div class="row">
    <div class="col-lg-8 mb-4">
        <h3>@SharedLocalizer["Send Us Message"]</h3>
        <form name="sentMessage" id="contactForm" novalidate>
            <div class="control-group form-group">
                <div class="controls">
                    <label>@SharedLocalizer["FullName"]:</label>
                    <input type="text" class="form-control" id="name" required data-validation-required-message="Please enter your name.">
                    <p class="help-block"></p>
                </div>
            </div>
            <div class="control-group form-group">
                <div class="controls">
                    <label>@SharedLocalizer["Phone Number"]:</label>
                    <input type="tel" class="form-control" id="phone" required data-validation-required-message="Please enter your phone number.">
                </div>
            </div>
            <div class="control-group form-group">
                <div class="controls">
                    <label>@SharedLocalizer["Email"]:</label>
                    <input type="email" class="form-control" id="email" required data-validation-required-message="Please enter your email address.">
                </div>
            </div>
            <div class="control-group form-group">
                <div class="controls">
                    <label>@SharedLocalizer["Message"]:</label>
                    <textarea rows="10" cols="100" class="form-control" id="message" required data-validation-required-message="Please enter your message" maxlength="999" style="resize:none"></textarea>
                </div>
            </div>
            <div id="success"></div>
            <!-- For success/fail messages -->
            <button type="submit" class="btn btn-primary" id="sendMessageButton">Send Message</button>
        </form>
    </div>

</div>
<!-- /.row -->
