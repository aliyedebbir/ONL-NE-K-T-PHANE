@page
@model Library.Pages.Admin.Book.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>
<h4>@Html.DisplayFor(model => model.Book.Title)</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <section>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Book.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Book.Title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Book.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Book.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Book.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Book.Price)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Book.UnitInStock)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Book.UnitInStock)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Book.Page)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Book.Page)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Book.Edition)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Book.Edition)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Book.PublishDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Book.PublishDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Book.Category)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Book.Category.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Book.Language)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Book.Language.LanguageName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Book.Publisher)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Book.Publisher.PublisherName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Book.Author)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Book.Author.FirstName)
                </dd>
            </dl>
        </section>
    </div>
    <div class="col-md-4 col-md-offset-2">
        <section>
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Book.ImageUrl)
                </dt>
                <dd class="col-sm-8">
                    <img class="pic-1" height="250" width="250" src="@Html.DisplayFor(model => model.Book.ImageUrl)">
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Book.ImageThumbnailUrl)
                </dt>
                <dd class="col-sm-8">
                    <img class="pic-1" height="250" width="250" src="@Html.DisplayFor(model => model.Book.ImageThumbnailUrl)">
                </dd>
            </dl>
        </section>
    </div>
</div>
<div>
    <a class="btn btn-primary" asp-page="./Index">Back</a>
</div>

