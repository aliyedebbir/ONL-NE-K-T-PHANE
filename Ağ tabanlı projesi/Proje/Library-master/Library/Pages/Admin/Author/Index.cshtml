@page
@model Library.Pages.Admin.Author.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Authors</h1>

<p>
    <a class="btn btn-success" asp-page="./Create">Create New <i class="fas fa-plus"></i></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Author[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author[0].LastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Author) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.AuthorId">Edit</a> |
                <a class="btn btn-warning" asp-page="./Details" asp-route-id="@item.AuthorId">Details</a> |
                <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.AuthorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
